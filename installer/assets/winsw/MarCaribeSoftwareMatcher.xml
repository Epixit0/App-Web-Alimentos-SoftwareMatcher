<service>
  <id>MarCaribeSoftwareMatcher</id>
  <name>MarCaribe SoftwareMatcher (SourceAFIS)</name>
  <description>API local SourceAFIS para generar/verificar/identificar templates.</description>

  <!-- El wrapper vive en INSTALLFOLDER\service, el app en INSTALLFOLDER\app -->
  <executable>%BASE%\..\app\MatcherApi.exe</executable>

  <!-- Variables de entorno para el servicio -->
  <env name="ASPNETCORE_URLS" value="http://127.0.0.1:5100" />
  <env name="SOURCEAFIS_THRESHOLD" value="40" />

  <!-- Logs -->
  <logpath>%PROGRAMDATA%\MarCaribeSoftwareMatcher\logs</logpath>
  <log mode="roll" />

  <onfailure action="restart" delay="5 sec" />
</service>
